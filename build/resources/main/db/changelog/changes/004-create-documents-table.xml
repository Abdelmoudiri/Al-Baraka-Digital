<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-documents-table" author="al-baraka-digital">
        <createTable tableName="documents">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="storage_path" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="uploaded_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="operation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="documents"
                baseColumnNames="operation_id"
                referencedTableName="operations"
                referencedColumnNames="id"
                constraintName="fk_documents_operation"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
