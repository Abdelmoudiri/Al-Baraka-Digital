<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-create-ai-validation-results-table" author="al-baraka-digital">
        <createTable tableName="ai_validation_results">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="operation_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="decision" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="confidence_score" type="DOUBLE"/>
            <column name="analysis_summary" type="TEXT"/>
            <column name="extracted_amount" type="DECIMAL(15, 2)"/>
            <column name="document_quality_score" type="DOUBLE"/>
            <column name="risk_factors" type="TEXT"/>
            <column name="analyzed_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="model_used" type="VARCHAR(50)"/>
            <column name="processing_time_ms" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="ai_validation_results"
                baseColumnNames="operation_id"
                referencedTableName="operations"
                referencedColumnNames="id"
                constraintName="fk_ai_validation_operation"
                onDelete="CASCADE"/>

        <createIndex tableName="ai_validation_results" indexName="idx_ai_validation_decision">
            <column name="decision"/>
        </createIndex>

        <createIndex tableName="ai_validation_results" indexName="idx_ai_validation_analyzed_at">
            <column name="analyzed_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
